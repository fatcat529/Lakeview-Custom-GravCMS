<section class="about-intro">
    <div class="intro-container">
        <div class="intro-content">
            <div class="title-content">
                <h1 class="title">{{ page.header.headtitle|raw }}</h1>
                <span class="title-indicator"></span>
            </div>
            <div class="intro-desc">
                <p class="description">{{ page.header.description|raw }}</p>
            </div>
        </div>
        <div class="intro-img-container">
            <div class="rectangle"></div>
            <div class="intro-img-content">
                {% for intro in page.header.intros %}
                    <img class="intro-img" src="{{ page.media.images[intro.image].url }}">
                {% endfor %}
            </div>
        </div>
    </div>
</section>
