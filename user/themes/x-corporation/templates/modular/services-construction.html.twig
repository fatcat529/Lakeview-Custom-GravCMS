<section class="services-construction" id="new_contracting">
    <div class="construction-container">
        <div class="construction-img-container">
            <div class="rectangle"></div>
            <div class="construction-img-content">
                <img class="construction-img" src="{{ page.media.images[header.construction].url }}">
            </div>
        </div>
        <div class="construction-content">
            <div class="title-content">
                <h1 class="title">{{ page.header.headtitle|raw }}</h1>
                <span class="title-indicator"></span>
            </div>
            <div class="construction-desc">
                <p class="description">{{ page.header.description|raw }}</p>
            </div>
        </div>
    </div>
</section>
