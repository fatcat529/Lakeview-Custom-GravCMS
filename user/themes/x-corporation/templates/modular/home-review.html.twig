<section class="home-review" style="position: relative">
    <img class="review-bg" src="{{ page.media.images[header.background].url }}">
    <div id="review-slider" class="carousel slide slider review-slider hidden-xs" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            {% for slide in page.header.slides %}
            {% set slideClass = loop.index == 1 ? 'item active' : 'item' %}
            <div class="{{ slideClass }}" style="width: 100%; height: 100%">
                <div class="carousel-caption">
                    <div class="review-container">
                        <div class="review-img-content">
                            <img class="review-img" src="{{ page.media.images[slide.image].url }}">
                            <div class="review-img-mask"></div>
                            <div class="rate-content">
                                <div class="rate-rectangle1">
                                    <p>Review<br>Stars</p>
                                </div>
                                <div class="rate-rectangle2">
                                    <p>{{ slide.rate }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="review-desc">
                            <div class="title-content">
                                <h1 class="title">{{ slide.heading|raw }}</h1>
                                <span class="title-indicator"></span>
                            </div>
                            <p class="description">{{ slide.description|raw }}</p>
                            <p class="subdescription">{{ slide.subdescription|raw }}</p>
                            <p class="auther">{{ slide.auther|raw }}</p>
                            <p class="date">{{ slide.date|raw }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <a class="left carousel-control" href="#review-slider" role="button" data-slide="prev">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#review-slider" role="button" data-slide="next">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>