{% set portfolio_name = grav.uri.query('name') %}
{% set portfolio_comment = grav.uri.query('comment') %}
{% set portfolio_description = grav.uri.query('description') %}
{% set portfolio_architect = grav.uri.query('architect') %}
{% set portfolio_interior = grav.uri.query('interior') %}
{% set portfolio_photography = grav.uri.query('photography') %}
{% set portfolio_awards = grav.uri.query('awards') %}
{% set portfolio_images = grav.uri.query('images')|split(',') %}

<section class="portfolio-detail">
    <div class="portfolio-detail-container">
        <div class="portfolio-intro-content">
            <div class="portfolio-desc-content">
                <p class="portfolio-name">{{ portfolio_name }}</p>
                <p class="portfolio-comment">{{ portfolio_comment }}</p>
                <p class="portfolio-description">{{ portfolio_description }}</p>
            </div>
            <div class="portfolio-appendix-content">
                <p class="portfolio-appendix-head">Architect / Designer:</p>
                <p class="portfolio-architect">{{ portfolio_architect }}</p>
                <p class="portfolio-appendix-head">Interior Design:</p>
                <p class="portfolio-interior">{{ portfolio_interior }}</p>
                <p class="portfolio-appendix-head">Photography:</p>
                <p class="portfolio-photography">{{ portfolio_photography }}</p>
                <p class="portfolio-appendix-head">Awards & Press:</p>
                <p class="portfolio-awards">{{ portfolio_awards }}</p>
            </div>
        </div>
        <div class="portfolio-slider-content">
            <div id="portfolio-slider" class="carousel slide slider portfolio-slider hidden-xs" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    {% for image in portfolio_images %}
                    {% set slideClass = loop.index == 1 ? 'item active' : 'item' %}
                    <div class="{{ slideClass }}" style="width: 100%; height: 100%">
                        <div class="carousel-caption">
                            <img class="portfolio_image" src="{{ image }}" alt="Image">
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <a class="left carousel-control" href="#portfolio-slider" role="button" data-slide="prev">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#portfolio-slider" role="button" data-slide="next">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="rectangle"></div>
        </div>
    </div>
</section>