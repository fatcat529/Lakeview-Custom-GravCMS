<section class="home-mission">
    <div class="mission-container">
        <div class="title-content">
            <h1 class="title">{{ page.header.headtitle|raw }}</h1>
            <span class="title-indicator"></span>
        </div>
        <div class="mission-content">
            <div class="mission-desc">
                <p class="description">{{ page.header.description|raw }}</p>
                <p class="subdescription">{{ page.header.subdescription|raw }}</p>
                <div class="award-content">
                    <a class="btn-about" href="{{ base_url_relative }}/about">ABOUT US</a>
                    <div style="display: flex; align-items: center;">
                        <span class="award"><i class="fa fa-diamond"></i></span>
                        <div class="award-desc">
                            <p>{{ page.header.experience|raw }}</p>
                            <p>YEARS EXPERIENCE</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mission-intro">
                <div class="rectangle"></div>
                <img src="{{ page.media.images[header.mission].url }}">
            </div>
        </div>
    </div>
</section>
